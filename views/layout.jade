    .wrap
      .subMenu
        .inner
          
          a#sTop.subNavBtn(href='#') About
          a#s1.subNavBtn(href='#') Resume
          a#s2.subNavBtn(href='#') Portfolio
          a#s3.subNavBtn.end(href='#') Contact
          
